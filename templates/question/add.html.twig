{% extends "base.html.twig" %}
{% block title %}
  Ajouter une question
{% endblock %}

{% block body %}
    <h1>Vous avez une question?</h1>


<div class="well">
  {{ form_start(form, {'attr': {'class': ''}}) }}

  {# Les erreurs générales du formulaire. #}
  {{ form_errors(form) }}


  <div class="form-group">
    {{ form_label(form.firstName, "Prénom (Au moins 2 lettres)", {'label_attr': {'class': ''}}) }}
    {{ form_errors(form.firstName) }}
    {{ form_widget(form.firstName, {'attr': {'class': 'form-control'}}) }}
  </div>



    <div class="form-group">
      {{ form_label(form.lastName, "Nom (Au moins 2 lettres)", {'label_attr': {'class': 'l'}}) }}
      {{ form_errors(form.lastName) }}
      {{ form_widget(form.lastName, {'attr': {'class': 'form-control'}}) }}
    </div>



    <div class="form-group">
      {{ form_label(form.mail, "Email", {'label_attr': {'class': ''}}) }}
      {{ form_errors(form.mail) }}
      {{ form_widget(form.mail, {'attr': {'class': 'form-control'}}) }}
    </div>



    <div class="form-group">
      {{ form_label(form.text, "Votre question", {'label_attr': {'class': ''}}) }}
      {{ form_errors(form.text) }}
      {{ form_widget(form.text, {'attr': {'class': 'form-control'}}) }}
    </div>
  {# Pour le bouton, pas de label ni d'erreur, on affiche juste le widget #}
  {{ form_widget(form.Ajouter, {'attr': {'class': 'btn btn-primary'}}) }}

  {{ form_rest(form) }}

  {{ form_end(form) }}
</div>
{% endblock %}
